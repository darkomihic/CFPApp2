<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ProfileSettings.createWorkoutCoach.GroupSelectionActivity">

    <TextView
        android:id="@+id/tvExerciseSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/doppio_one"
        android:shadowColor="#A8A8A8"
        android:shadowDx="3"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Select a group from which you want to choose a client."
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:padding="24dp"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="213dp"
        android:layout_height="82dp"
        android:layout_gravity="center"
        />

    <!-- Centered Button -->
    <Button
        android:id="@+id/btnExerciseSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:layout_gravity="center"
        android:backgroundTint="#C15127"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/doppio_one"
        android:shadowColor="#A8A8A8"
        android:shadowDx="3"
        android:shadowDy="0"
        android:shadowRadius="5" />

</LinearLayout>

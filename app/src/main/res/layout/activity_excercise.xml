<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222"
    android:backgroundTint="#222222"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ExcerciseActivity">

    <TextView
        android:id="@+id/exerciseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercise List"
        android:background="#00F4F6F9"
        android:backgroundTint="#F4F6F9"
        android:textColor="#F4F6F9"
        android:fontFamily="@font/doppio_one"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- RecyclerView to display exercises -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/exerciseRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:background="#222222"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/exercise_item_layout" />

</LinearLayout>

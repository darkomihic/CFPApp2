<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".RunTimerActivity">

    <EditText
        android:id="@+id/restEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_outline"
        android:backgroundTint="#C05227"
        android:ems="10"
        android:fontFamily="@font/doppio_one"
        android:minHeight="48dp"
        android:outlineProvider="none"
        android:textColor="#F4F6F9"
        android:textSize="14sp"
        android:hint="Rest Period (in seconds)"
        android:textColorHint="#F4F6F9"
        android:inputType="number" />

    <EditText
        android:id="@+id/runEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_outline"
        android:backgroundTint="#C05227"
        android:ems="10"
        android:fontFamily="@font/doppio_one"
        android:hint="Run Period (in seconds)"
        android:inputType="number"
        android:minHeight="48dp"
        android:outlineProvider="none"
        android:textColor="#F4F6F9"
        android:textColorHint="#F4F6F9"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/runEditText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_outline"
        android:backgroundTint="#C05227"
        android:ems="10"
        android:fontFamily="@font/doppio_one"
        android:hint="Number of sets"
        android:inputType="number"
        android:minHeight="48dp"
        android:outlineProvider="none"
        android:textColor="#F4F6F9"
        android:textColorHint="#F4F6F9"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/countdownTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="0"
        android:textColor="#F4F6F9"
        android:textSize="48sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnStart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#C15127"
            android:fontFamily="@font/doppio_one"
            android:shadowColor="#A8A8A8"
            android:shadowDx="3"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Start"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.815" />

        <Button
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#C15127"
            android:fontFamily="@font/doppio_one"
            android:shadowColor="#A8A8A8"
            android:shadowDx="3"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Stop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnStart"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.815"/>

    </LinearLayout>



    <TextView
        android:id="@+id/runrest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00F4F6F9"
        android:backgroundTint="#F4F6F9"
        android:fontFamily="@font/doppio_one"
        android:text="Run/Rest"
        android:textAlignment="center"
        android:textColor="#F4F6F9"
        android:textSize="48sp" />

</LinearLayout>

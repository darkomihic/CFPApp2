<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="55dp"
        android:layout_height="57dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/narandzastmanji" />

    <Button
        android:id="@+id/btnUserSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User settings"
        android:backgroundTint="#C15127"
        android:fontFamily="@font/doppio_one"
        android:shadowColor="#A8A8A8"
        android:shadowDx="3"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginTop="16dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnJoinGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Join group"
        android:backgroundTint="#C15127"
        android:fontFamily="@font/doppio_one"
        android:shadowColor="#A8A8A8"
        android:shadowDx="3"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginTop="16dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnDeleteAcc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete account"
        android:backgroundTint="#C15127"
        android:fontFamily="@font/doppio_one"
        android:shadowColor="#A8A8A8"
        android:shadowDx="3"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginTop="16dp"/>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"
        android:layout_marginTop="16dp"
        />

    <Button
        android:id="@+id/btnCreateWorkout4User"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create a workout for an user"
        android:backgroundTint="#C15127"
        android:fontFamily="@font/doppio_one"
        android:shadowColor="#A8A8A8"
        android:shadowDx="3"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginTop="16dp"/>

</LinearLayout>